<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manHinh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.assignment_android_basic.MainActivity" >

    <ImageView
        android:id="@+id/ivAdd"
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logofpt" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout4" >

        <TextView
            android:id="@+id/tvClassName"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Username:" />

        <EditText
            android:id="@+id/edtUser"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="leconghau" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ivAdd"
        android:layout_below="@+id/linearLayout1" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Password:" />

        <EditText
            android:id="@+id/edtPass"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="123456"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/ivAdd"
        android:layout_marginTop="31dp" >

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:src="@drawable/loginbutton" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:text="Remember" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkStatus"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/checkStatus"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Login" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Exit" />

    </LinearLayout>

</RelativeLayout>